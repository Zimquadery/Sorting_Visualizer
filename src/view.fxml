                  <Button fx:id="customArrayBtn" mnemonicParsing="false" onAction="#handleCustomArray" prefHeight="35.0" prefWidth="130.0" text="Custom Array" />
                  <TextField fx:id="customArrayField" prefHeight="36.0" prefWidth="284.0" promptText="Enter comma-separated values" visible="false" />
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- AnchorPane for array visualization -->
      <AnchorPane fx:id="visualizationPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="120.0" />
   </children>
</AnchorPane>
